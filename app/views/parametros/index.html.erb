<section class="content-header">
  <h1>Parámetros</h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
    <li class="active"><i class="fa fa-book"></i> Parámetros</li>
  </ol>
</section>

<section class="content">
  <div class="box box-primary">
    <div class="box-header">
        <div class="row">
          <div class="col-xs-12 col-md-10">
          </div>
          <div class="col-xs-12 col-md-2">
            <% if can? :create, Parametro %>
            <%= link_to 'Nuevo', new_parametro_path, { class: 'btn btn-primary btn-block'} %>
            <% end -%>
          </div>
        </div>
    </div>
    <div class="box-body">

    <div class="row">
      <div class="col-xs-1"><strong>Código</strong></div>
      <div class="col-xs-8"><strong>Nombre</strong></div>
      <div class="col-xs-1"><strong>Valor</strong></div>
      <div class="col-xs-1"></div>
      <div class="col-xs-1"></div>
    </div>

    <% @parametros.each do |parametro| %>
    <div class="row">
      <div class="col-xs-1"><%= parametro.codigo %></div>
      <div class="col-xs-8"><%= parametro.nombre %></div>
      <div class="col-xs-1"><%= parametro.valor %></div>
      <div class="col-xs-1">
        <% if can? :create, parametro %>
        <%= link_to 'Editar', edit_parametro_path(parametro) %>
        <% end -%>
      </div>
      <div class="col-xs-1">
        <% if can? :destroy, parametro %>
        <%= link_to 'Borrar', parametro, method: :delete, data: { confirm: 'Seguro de eliminar?' } %>
        <% end -%>
        </div>
    </div>
    <% end %>

    </div>
  </div>
</section>
