<div class="box box-primary">
  <%= form_with(model: parametro, local: true, class: 'form-horizontal') do |form| %>

    <div class="box-header with-border">
      <div class="row">
        <div class="col-xs-12 col-md-9">
        </div>
        <div class="col-xs-4 col-md-1">
          <%= link_to 'Regresar', parametros_path, class: 'btn btn-default btn-block' %>
        </div>
        <div class="col-xs-4 col-md-1">
          <%= submit_tag 'Guardar', class: "btn btn-primary btn-block" %>
        </div>
        <div class="col-xs-4 col-md-1">
          <%= link_to 'Nuevo', new_parametro_path, { class: 'btn btn-primary btn-block'} %>
