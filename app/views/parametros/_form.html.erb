        <%= form.text_field :nombre, id: :parametro_nombre, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :valor, 'Valor', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= form.text_field :valor, id: :parametro_valor, class: 'form-control' %>
