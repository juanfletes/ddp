               <div class="form-group">
                <%= label_tag 'matrimonio_observacion', 'Observación', class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                  <%= text_field_tag 'matrimonio[observacion]', @matrimonio.observacion, class: 'form-control' %>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
