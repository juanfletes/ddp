    <div class="box">
        <div class="box-body">
          <div class="row">
            <div class="col-xs-6 col-md-2">
              <div class="form-group">
              <%= label_tag 'matrimonio_boda_civil', 'Boda Civil', class: 'col-sm-10 control-label' %>
