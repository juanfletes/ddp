<%= render 'shared/page_title', title: 'Actividad',
                                small_title: "ID ##{@actividad.id}",
                                navigation: [{ title: 'Actividades', url: '/actividades', icon: 'fa-calendar' },
                                             { title: 'Editar', url: '#', icon: 'fa-circle-o' }] %>
<section class="content">
<%= form_with(model: @actividad, local: true, class: 'form-horizontal') do |form| %>
<div class="box box-primary">

    <div class="box-header with-border">
      <div class="row">
        <div class="col-xs-12 col-md-10">
          <h5><strong>
            Datos de la actividad
          </strong>
        </h5>
        </div>
        <div class="col-xs-6 col-md-1">
          <%= link_to 'Regresar', @actividad , class: 'btn btn-default btn-block'%>
        </div>
        <div class="col-xs-6 col-md-1">
          <%= submit_tag 'Guardar', class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  <div class="box-body">
    <%= render 'form', actividad: @actividad, form: form %>
  </div>
</div>
<% end %>
</section>
